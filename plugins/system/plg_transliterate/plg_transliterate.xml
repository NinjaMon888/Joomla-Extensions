      	<field name="select_language_usr" type="radio" default="0" label="LBL_SELECT_LANGUAGE_LU" description="DESC_SELECT_LANGUAGE_LU">
				<option value="1">Hindi/Marathi</option>
				<option value="0">English</option>
			</field>
				
			</fieldset>-->
		</fields>
	</config>
 
</install>
